{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/send-weekly-summary?type=reminder&auth=${CRON_AUTH_KEY}",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/send-weekly-summary?type=summary&auth=${CRON_AUTH_KEY}",
      "schedule": "0 18 * * 5"
    }
  ]
}
